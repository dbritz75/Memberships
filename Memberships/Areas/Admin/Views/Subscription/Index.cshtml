@model IEnumerable<Memberships.Entities.Subscription>
@using Memberships.Areas.Admin.Models;

@{
    ViewBag.Title = "Subscriptions";
}

<h2>Subscriptions</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>CRUD</th>
    </tr>

    @foreach (var sub in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => sub.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => sub.RegistrationCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => sub.Description)
            </td>

            @Html.Partial("_TableButtonsPartial",
            new SmallButtonModel
            { ID = sub.ID })

        </tr>
    }

</table>
